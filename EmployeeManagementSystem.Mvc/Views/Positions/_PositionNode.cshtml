@model EmployeeManagementSystem.Application.DTOs.PositionDto

<div class="position-node mb-2" style="margin-left: @(ViewBag.Level ?? 0 * 20)px;">
    <div class="d-flex align-items-center">
        <span class="me-2">@Model.Name</span>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this position?');">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
        </form>
    </div>
    @if (Model.Children != null && Model.Children.Any())
    {
        <div class="ms-4">
            @foreach (var child in Model.Children)
            {
                @await Html.PartialAsync("_PositionNode", child)
            }
        </div>
    }
</div>

